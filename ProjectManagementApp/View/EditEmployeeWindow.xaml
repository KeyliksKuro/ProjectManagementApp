<Window x:Class="ProjectManagementApp.View.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementApp.View"
        xmlns:vm="clr-namespace:ProjectManagementApp.ViewModel"
        d:DataContext="{x:Type vm:EditEmployeeVM}"
        mc:Ignorable="d"
        x:Name="editEmployeeWnd"
        Title="Ввода данных сотрудника" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Width="200"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    DataContext="{Binding Employee}">
            <TextBlock Text="Имя"/>
            <TextBox Text="{Binding Path=Name}"/>
            <TextBlock Text="Фамилия"/>
            <TextBox Text="{Binding Path=Surname}"/>
            <TextBlock Text="Отчество"/>
            <TextBox Text="{Binding Path=Patronymic}"/>
            <TextBlock Text="Email"/>
            <TextBox Text="{Binding Path=Email}"/>
        </StackPanel>
        <Button Grid.Row="1" Content="Сохранить"
                Command="{Binding SaveCommand}"
                CommandParameter="{Binding ElementName=editEmployeeWnd}"/>
    </Grid>
</Window>
